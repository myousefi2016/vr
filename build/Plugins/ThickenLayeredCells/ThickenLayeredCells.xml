<xml>
    <proxy>
        <group>filters</group>
        <name>ThickenCells</name>
        <label>Thicken Layered Cells</label>
        <documentation>
            <brief/>
            <long>
        Filter to thicken cells in layers using average thickeness along edges between layers.
      </long>
        </documentation>
        <property>
            <name>Input</name>
            <label>Input</label>
            <defaults/>
            <domains>
                <domain>
                    <text>Accepts input of following types:</text>
                    <list>
                        <item>vtkDataSet</item>
                    </list>
                </domain>
                <domain>
                    <text>
      The dataset must contain a field array (cell)
      
        with 1 component(s).
      </text>
                </domain>
            </domains>
        </property>
        <property>
            <name>SelectThickness</name>
            <label>Thickness</label>
            <documentation>
                <brief/>
                <long>Select the 'thickness' array.</long>
            </documentation>
            <defaults>0</defaults>
            <domains>
                <domain>
                    <text>An array of scalars is required.</text>
                </domain>
            </domains>
        </property>
        <property>
            <name>SelectLayer</name>
            <label>Layer</label>
            <documentation>
                <brief/>
                <long>Select the 'layer' array.</long>
            </documentation>
            <defaults>1</defaults>
            <domains>
                <domain>
                    <text>An array of scalars is required.</text>
                </domain>
            </domains>
        </property>
        <property>
            <name>EnableThickening</name>
            <label>EnableThickening</label>
            <documentation>
                <brief/>
                <long>
          Enable/disable thickening. When disabled, the filter simply acts as a
          pass-through.
        </long>
            </documentation>
            <defaults>1</defaults>
            <domains>
                <domain>
                    <text>Accepts boolean values (0 or 1).</text>
                </domain>
            </domains>
        </property>
    </proxy>
</xml>
